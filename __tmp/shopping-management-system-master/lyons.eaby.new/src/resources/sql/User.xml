<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="lyons.dao.UserDao">

      <resultMap type="lyons.user.entity.User" id="userResult">  
        <id column="username" jdbcType="VARCHAR" property="username"/>
        <result column="userpass" jdbcType="VARCHAR" property="userpass"/>
        <result column="phone" jdbcType="VARCHAR" property="phone"/>
        <result column="address" jdbcType="VARCHAR" property="address"/>
        <result column="realname" jdbcType="VARCHAR" property="realname"/>
      </resultMap>
      
      <sql id="queryVip">select username,userpass,phone,address,realname from vip</sql>
      <sql id="insertUser">INSERT INTO vip(username,userpass,phone,address,realname) </sql>
      
<!-- 根据用户名查询用户信息 -->

       <!-- Map系collection为Map的键 index：键  item:值 -->
      <select id="queryByuserNamepassWord" parameterType="java.util.Map" resultMap="userResult"> <!-- 利用Map传参 -->
        <include refid="queryVip"/>
	    WHERE
		    <foreach collection="userMap" index="userName" item="userPass" > 
		             username = '${userName}' 
		        and  userpass = '${userPass}'
		    
		    </foreach>
      </select>
      <!-- 关于collection 的值
           数组： array
          List： list
          类参数： collection 对就是collection ="collection "
          Map : 键 (在java类中自己定义的)
       -->
       
    
    <select id="queryByuserName" parameterType="String" resultMap="userResult">
     
     SELECT userName 
     FROM   vip
     WHERE  
            <if test="_parameter != null and !(&quot;&quot;.equals(_parameter.trim()))">
                username = #{_parameter}                    
            </if>
    
    </select>
           
 <!-- 注册新用户 -->      
 
    <insert id="insertUser" parameterType="java.util.Map">
       
       <include refid="insertUser"/>
       VALUES
       (
            '${username}',
            '${userpass}',
            '${phone}',
            '${address}',
            '${realname}'
       )
    </insert>
 
 
 
 
 
 
 
 
 
 
</mapper>
