<?xml version="1.0" encoding="UTF-8"?>
<beans
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
	
	<bean id="show" class="com.itzcn.bean.ShowStudent" autowire="byName"></bean>
	<bean class="com.itzcn.bean.Student" id="student">
		<property name="name"><value>王华</value></property>
		<property name="age"><value>20</value></property>
		<property name="sex"><value>男</value></property>
	</bean>


</beans>